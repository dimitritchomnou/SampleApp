<!-- Show users -->
<table class="profile" summary="Information profil">
  <tr>
    <td class="main">
        <h1>
        	<!-- Gravatar -->
          <%= gravatar_for @user %>
          <%= @user.nom %>
        </h1>
      
      <!-- Appel form de suivi-->
      <%= render 'follow_form' if signed_in? %>

      <!-- Ajout  des micro-messg Ã  la page du Users-- >
      <% unless @user.microposts.empty? %>
        <table class="microposts" summary="Micro-messages du users">
          <%= render @microposts %>
          <%= will_paginate @microposts %>
        </table>
      <% end %>

    </td>
    <td class="sidebar round">
      <strong>Nom</strong> <%= @user.nom %><br />
      <strong>URL</strong> <%= link_to user_path(@user), @user %><br />
      <strong>Messages</strong> <%= @user.microposts.count %>
    </td>
  </tr>
</table>


